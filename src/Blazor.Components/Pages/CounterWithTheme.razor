<h1>Counter</h1>

<p>Current count: @currentCount</p>

<button class="btn @Theme.ButtonClass" @onclick="IncrementCount">Click me</button>

@code {

    [CascadingParameter]
    [AllowNull]
    public ThemeInfo Theme { get; set; }

    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}
